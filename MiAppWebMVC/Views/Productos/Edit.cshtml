@model MiAppWebMVC.Models.Producto

<h2>Editar Producto</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Nombre:</label>
        <input asp-for="Nombre" />
    </div>
    <div>
        <label>Precio:</label>
        <input asp-for="Precio" />
    </div>
    <div>
        <label>Stock:</label>
        <input asp-for="Stock" />
    </div>
    <button type="submit">Guardar Cambios</button>
</form>
